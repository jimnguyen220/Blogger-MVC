<div class="blog-form">
    <h2>Create a new post</h2>
    <form class="form">

        <div class="form-group">
            <input class="form-input" type="text" id="blog-heading" placeholder="title"/>
        </div>
        <div class="form-group">
            <textarea class="form-input" id="blog-content" placeholder="enter text here"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">create post</button>
        </div>
    </form>
</div>