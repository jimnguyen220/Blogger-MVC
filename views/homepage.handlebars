<div class="row col-auto">
    <h2>Welcome to The Dashboard</h2>
</div>


<div class="row col-auto">
    <div class="col-md-6">
        {{> new-blog}}
    </div>

    {{#if blogs.length}}
    <div class="col-md-6">
        <h3>Post History</h3>

        {{#each blogs}}
        <div class="row blog-list">
            <div class="col-md-6">
                <p>
                    <h4><a href="/blog/{{id}}">{{heading}}</a></h4>
                    post created by {{user.username}}
                </p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>


<script src="./js/homepage.js"></script>