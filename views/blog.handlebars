
<div class="blog-update">
    <h2>{{createdAt}}</h2>
    <form class="form">
        <div class="form-group">
            <input class="form-input" id="blog-heading" placeholder="{{heading}}" />
        </div>

        <div class="form-group">
            <textarea class="form-input" id="blog-content">{{content}}</textarea>
        </div>

        <button class="btn btn-sm btn-success" id="btn-upd" data-id="{{id}}">Update</button>

        <button class="btn btn-sm btn-danger" id="btn-del"data-id="{{id}}">DELETE</button>
    </form>
    
</div>

<script src="/js/blog.js"></script>